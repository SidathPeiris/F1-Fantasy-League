<div class="container" style="margin-top: 48px; margin-bottom: 48px;">
  <div class="hero-section" style="min-height: 350px; flex-direction: column; align-items: flex-start; background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-radius: 24px; box-shadow: 0 4px 32px rgba(225,6,0,0.08); padding: 3rem 2rem;">
    <h1 class="main-title f1-red" style="margin-bottom: 0.5rem;">Build Your Fantasy Team</h1>
    <p class="hero-subtitle" style="margin-bottom: 2.5rem; color: #fff;">Select your dream Formula 1 lineup! (Feature coming soon)</p>
    <div style="width: 100%; min-height: 200px; background: rgba(255,255,255,0.03); border: 2px dashed #e10600; border-radius: 16px; display: flex; align-items: flex-start; justify-content: center; color: #e10600; font-size: 1.3rem; font-weight: 600; padding: 2rem 0;">
      <% columns = @drivers.each_slice((@drivers.size/4.0).ceil).to_a %>
      <div style="display: flex; width: 100%; max-width: 1000px; justify-content: space-between; gap: 2rem;">
        <% columns.each do |column| %>
          <div style="flex: 1; min-width: 0;">
            <ul style="list-style: none; padding: 0; color: #fff;">
              <% column.each do |driver| %>
                <li style="display: flex; align-items: center; margin-bottom: 1.1rem; background: rgba(255,255,255,0.04); border-radius: 12px; padding: 0.5rem 0.7rem; border-left: 4px solid #<%= driver[:team_colour] || 'e10600' %>;">
                  <% if driver[:headshot_url].present? %>
                    <img src="<%= driver[:headshot_url] %>" alt="<%= driver[:name] %>" style="width: 64px; height: 64px; border-radius: 50%; margin-right: 0.9rem; border: 2px solid #<%= driver[:team_colour] || 'e10600' %>; background: #fff; object-fit: cover;" />
                  <% end %>
                  <div>
                    <span style="font-weight: bold; color: #fff; font-size: 1.08rem;">
                      #<%= driver[:number] %> <%= driver[:name] %>
                    </span><br/>
                    <span style="font-size: 0.98rem; color: #<%= driver[:team_colour] || 'e10600' %>; font-weight: 500;">
                      <%= driver[:team] %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
